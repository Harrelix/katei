root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 80

[*.svelte]
indent_style = space
indent_size = 2

# Matches the exact files either package.json or .travis.yml
[package.json]
indent_style = space
indent_size = 2
